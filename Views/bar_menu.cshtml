@{
  Layout="Shared/_Layout.cshtml";
}

@if (@Model["allDrinks"].Count != 0)
{
  <p>DRINKS:</p>
  <ul>
    @foreach (var drink in @Model["allDrinks"])
    {
      <li>@drink.GetName() | ABV: @drink.GetABV(), Cost: $@drink.GetCost()</li>
    }
  </ul>
}
else
{
  <p>NO DRINKS FOR YOU</p>
}

@if (@Model["allFood"].Count != 0)
{
  <p>FOOD:</p>
  <ul>
    @foreach (var food in @Model["allFood"])
    {
      <li>@food.GetFoodType() | Cost: $@food.GetCost()
        <ul>
          <li>@food.GetDescription()</li>
        </ul>
      </li>
    }
  </ul>
}
else
{
  <p>NO FOOD FOR YOU</p>
}

<p><a href="/drinks/add">Add A New Drink to the Menu</a></p>
<p><a href="/food/add">Add New Food Item to the Menu</a></p>
